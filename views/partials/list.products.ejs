

  <h1 class="text-center font-sans text-4xl font-bold text-yellow-500">Mantenimiento Productos</h1>
  <div class="grid grid-cols-8 p-2 m-4 text-2xl text-yellow-500 border">
    <div>Producto</div>
    <div>Id</div>
      <div>Nombre</div>
      <div>Descripción</div>
      <div class="text-right">Stock</div>
      <div class="text-right">Precio</div>
  </div>

      <ul id="lista" class="mx-5">
  <% for (let i = 0; i < data.length; i++) { %>
    <li class="item text-white grid grid-cols-8 p-1 focus:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-300 focus:ring-offset-2d">
      <div><img src=<%=data[i].image_path%> class="h-16 w-16 rounded"></div>
      <div><%= data[i].id %></div> <div><%= data[i].name %></div> <div><%= data[i].description || 'Sin descripción' %></div> <div class="text-right"><%= data[i].stock %></div> <div class="text-right">$<%= data[i].price %></div>
      <button><i data-id=<%=data[i].id%> class="bi bi-pencil edit"></i></button>
      <button><i data-id=<%=data[i].id%> class="bi bi-trash delete"></i></button>


    </li>
    <% } %>
  </ul>

